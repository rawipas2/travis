{
	"env": {
		"es6": true,
		"node": true,
		"jest/globals": true
	},
	"extends": ["eslint:recommended"],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"jest/no-disabled-tests": "warn",
		"jest/no-focused-tests": "error",
		"jest/no-identical-title": "error",
		"jest/prefer-to-have-length": "warn",
		"jest/valid-expect": "error"
	},
	"plugins": ["jest"],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true
	}
}
